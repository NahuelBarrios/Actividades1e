	int option;

	while(option !=4)
	{
		utn_getUnsignedInt("\n\nBienvenidos\n\n1-Cargar Estudiante\n2-Mostrar Estudiante especifico\n3-Mostrar todo\n4-Ordenar por legajo","\n\nError Ingrese opcion valida\n\n"
				,1,sizeof(int),1,5,3,&option);

		switch(option)
		{
		case 1:
		break;
		case 2:
		break;
		case 3:
			break;
		case 4:
			break;


		}

	}

	return 0;
}
